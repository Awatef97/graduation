<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.awatef.loggin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

        <activity
            android:name=".content"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Profile"
            android:parentActivityName=".content" />
        <activity
            android:name=".Courses"
            android:parentActivityName=".content" />
        <activity
            android:name=".News"
            android:parentActivityName=".content" />
        <activity
            android:name=".Courses2"
            android:parentActivityName=".Courses" />
        <activity
            android:name=".Grade"
            android:parentActivityName=".Courses2" />
        <activity
            android:name=".Attendence"
            android:parentActivityName=".Courses2" />
        <activity
            android:name=".Timetable"
            android:parentActivityName=".Courses2" />
        <activity
            android:name=".Timetable1"
            android:parentActivityName=".Timetable" />
    </application>

</manifest>